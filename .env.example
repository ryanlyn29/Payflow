# PaySignal Enterprise Console - Environment Variables
# Copy this file to .env and update with your values

# ============================================
# Application
# ============================================
NODE_ENV=development
PORT=8080
APP_VERSION=1.0.0
LOG_LEVEL=info

# ============================================
# Frontend
# ============================================
FRONTEND_URL=http://localhost:3000
BASE_URL=http://localhost:3000
VITE_API_BASE_URL=http://localhost:8080/api/v1

# ============================================
# PostgreSQL Database
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=paysignal
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_MIN_CONNECTIONS=2
POSTGRES_IDLE_TIMEOUT=30000
POSTGRES_CONNECTION_TIMEOUT=5000
POSTGRES_STATEMENT_TIMEOUT=30000
POSTGRES_QUERY_TIMEOUT=30000

# ============================================
# Redis Cache
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_CONNECT_TIMEOUT=5000
REDIS_PING_INTERVAL=30000

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=your-jwt-secret-key-min-64-characters-long-for-security
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-min-64-characters-long-for-security
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MONITORING_MAX=60
RATE_LIMIT_API_MAX=1000
RATE_LIMIT_AUTH_MAX=100

# ============================================
# AWS Services (Optional)
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SQS_QUEUE_URL=
SQS_DLQ_URL=

# ============================================
# Service URLs (for Docker)
# ============================================
JAVA_RULES_SERVICE_URL=http://java-rules:8081
GO_WORKER_SERVICE_URL=http://go-worker:8082
CPP_DEDUP_SERVICE_URL=http://cpp-dedup:8083

# ============================================
# Email Service (Optional - for production)
# ============================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@paysignal.com

# ============================================
# OAuth (Optional - for production)
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
